{
	"extends": "@sindresorhus/tsconfig",
	"compilerOptions": {
    	"lib": ["es2023", "dom", "dom.iterable"],
    	"moduleResolution": "nodenext",
    	"esModuleInterop": true,
		"outDir": "build",
		"sourceMap": true,
		"jsx": "react",
		"isolatedModules": true
	},
	"include": ["src", "*.d.ts"],
	"ts-node": {
		"transpileOnly": true,
		"files": true,
		"experimentalResolver": true,
		"experimentalSpecifierResolution": "node"
	}
}